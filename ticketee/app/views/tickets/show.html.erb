<div id="ticket">
    <header>
      <h1><%= @project.name %></h1>
    </header>
    <header>
      <h2><%= @ticket.name %></h2>
</header>
    <%= simple_format(@ticket.description) %>
  </div>

  <header>
    <h2><%= @ticket.name %></h2>
    <ul class="actions">
      <li><%= link_to "Edit Ticket", [:edit, @project, @ticket], #edit_project_ticket_path(@project, @ticket) This is the same thing!
        class: "edit" %></li>
    </ul>
</header>

<li><%= link_to "Delete Ticket", [@project, @ticket], method: :delete,
    data: { confirm: "Are you sure you want to delete this ticket?"},
     class: "delete" %></li>
